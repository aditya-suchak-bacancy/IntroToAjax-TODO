<div class="boxs">
<% if notice%>
  <p id="notice" class="alert alert-success"><%= notice %></p>
<% end %>
<h1 class="title">Tasks</h1>
<table id="tasks">
  <thead>
    <tr>
      <th class="text">Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%= render @tasks %>
  </tbody>
</table>

<br>
<div id="new-task">
  <%= link_to 'New Task', new_task_path, remote: true,class:"btn btn-outline-primary" %>
</div>
</div>
